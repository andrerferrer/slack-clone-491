<div class="container">

  <h1>#<%= @chatroom.name %></h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message_here| %>
      <%= render partial: 'messages/message', locals: { message: message_here } %>
      <%# message is a local variable in the partial that's going to store the value of the message_here %>
    <% end %>
  </div>

  <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
  <% end %>

</div>
